  { de: "Sie will mehr Taschengeld.", fr: ["Elle veut plus d‚Äôargent de poche"] }
];

/* Elemente */
const vocabEl = document.getElementById("vocab");
const inputEl = document.getElementById("answerInput");
const feedbackEl = document.getElementById("feedback");
const starBtn = document.getElementById("starBtn");

/* Hilfsfunktionen */
function normalize(t) {
  return t.toLowerCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "").replace(/^(le|la|l') /, "").trim();
}

function activeList() {
  let list = starOnlyMode ? vocabA.filter(v => v.star) : vocabA;
  const selected = list.filter(v => v.selected !== false);
  return selected.length ? selected : list;
}

function nextWord() {
  const list = activeList();
  if (!list.length) { vocabEl.textContent = "Keine passenden Vokabeln"; return; }
  currentIndex = Math.floor(Math.random() * list.length);
  vocabEl.classList.add("fade");
  setTimeout(() => { vocabEl.textContent = list[currentIndex].de; vocabEl.classList.remove("fade"); }, 250);
  starBtn.textContent = list[currentIndex].star ? "‚òÖ" : "‚òÜ";
  inputEl.value = ""; feedbackEl.textContent = ""; feedbackEl.className = "feedback";
}

function checkAnswer() {
  const list = activeList();
  if (!list[currentIndex]) return;
  const user = normalize(inputEl.value);
  const solutions = list[currentIndex].fr.map(normalize);
  const ok = strictMode ? solutions.includes(user) : solutions.some(s => user.includes(s) || s.includes(user));
  feedbackEl.textContent = ok ? "‚úÖ Richtig" : "‚ùå Richtig w√§re: " + list[currentIndex].fr.join(" /");
  feedbackEl.className = "feedback " + (ok ? "correct" : "wrong");
}

starBtn.onclick = () => { const list = activeList(); if (!list[currentIndex]) return; list[currentIndex].star = !list[currentIndex].star; starBtn.textContent = list[currentIndex].star ? "‚òÖ" : "‚òÜ"; };

function toggleSettings() { document.getElementById("settings").classList.toggle("active"); }

function showAllVocab() {
  const selectionDiv = document.getElementById("vocabSelection");
  selectionDiv.innerHTML = "";
  vocabA.forEach((vocab, idx) => {
    const checkbox = document.createElement("input"); checkbox.type="checkbox"; checkbox.id="vocab_"+idx; checkbox.checked=vocab.selected!==false;
    const label = document.createElement("label"); label.htmlFor="vocab_"+idx; label.textContent=vocab.de;
    const br = document.createElement("br");
    checkbox.onchange = ()=>{ vocab.selected = checkbox.checked; };
    selectionDiv.appendChild(checkbox); selectionDiv.appendChild(label); selectionDiv.appendChild(br);
    vocab.selected = checkbox.checked;
  });
}

/* Event Listener */
document.getElementById("strictToggle").onchange = e=>strictMode=e.target.checked;
document.getElementById("starOnlyToggle").onchange = e=>{starOnlyMode=e.target.checked; nextWord();};
document.getElementById("checkBtn").onclick = checkAnswer;
document.getElementById("nextBtn").onclick = nextWord;
inputEl.addEventListener("keydown", e=>e.key==="Enter"&&checkAnswer());
</script>

